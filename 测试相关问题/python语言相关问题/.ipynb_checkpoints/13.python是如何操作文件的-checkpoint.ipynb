   "source": [
    "f = open('test.txt', 'wt')\n",
    "f.write(\"hello world\")\n",
    "f.close\n",
    "\n",
    "# 使用with,追加内容\n",
    "with open('test.txt,', 'at') as f:\n",
    "    f.write(\"\\nhell add\")\n",
    "# 读取文件\n",
    "with open('test.txt', 'rt') as f:\n",
    "    print(f.read())\n"
   ]
